<%= render 'layouts/errors', object: @unit %>

<%= form_for (@roster ? [@roster, @unit] : @unit) do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :buff %><br>
  <%= f.text_field :buff %><br>
  <%= f.label :role %><br>
  <%= f.collection_radio_buttons :role, @roles, :itself, :itself %><br>
  <%= f.submit%>
<% end %>