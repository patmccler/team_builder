<% opts = {} %>
<% form_url_options ||= false %>
<% html_method ||= false %>
<% opts[:url] = form_url_options if form_url_options %>
<% opts[:method] = html_method if html_method %>

<%= render 'layouts/errors', object: @roster %>

<%= form_for @roster, opts do |f|%>
  <%= f.label :name%><br>
  <%= f.text_field :name %><br>
  <%= f.label :description %><br>
  <%= f.text_field :description%><br>
  <%= f.label :unit_type %><br>
  <% @unit_types.each do |unit_type| %>
    <%= unit_type_radio_button_with_label(f, unit_type) %><br>

  <% end %><br>
  <%= f.submit %>
<% end %>
