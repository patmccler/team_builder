<%= render 'layouts/errors', object: @game %>

<%= form_for @game do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :unit_type%><br>

  <% @unit_types.each do |unit_type| %>
    <%= game_type_radio_button_with_label(f, unit_type) %>

  <% end %>

  <br>
  <%= f.submit%>
<% end %>
<br>